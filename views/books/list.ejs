<!DOCTYPE html>
<html>
<head>
  <title>Book List – Bertie's Books</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
<div class="container">
  <h1>Bertie’s Books</h1>
  <nav>
    <a href="../">Home</a>
    <a href="./list">All Books</a>
    <a href="./add">Add Book</a>
    <a href="./search">Search Books</a>
    <a href="../users/register">Register</a>
    <a href="../users/login">Login</a>
    <a href="../about">About</a>
    <a href="../logout">Logout</a>
  </nav>

  <div class="section">
    <h2 style="margin-top:0">Book List <span class="badge">(<%= books.length %>)</span></h2>

    <table class="table">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price (£)</th>
        <th>Actions</th>
      </tr>

      <% books.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.name %></td>
          <td><%= b.price %></td>
          <td class="actions">
            <a class="btn" href="./edit/<%= b.id %>">Edit</a>
            <a class="btn btn-danger" href="./delete/<%= b.id %>" onclick="return confirm('Delete this book?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>

    <div style="margin-top:14px">
      <a class="btn btn-primary" href="./add">+ Add Book</a>
      <a class="btn" href="./search">Search</a>
    </div>
  </div>
</div>
</body>
</html>
