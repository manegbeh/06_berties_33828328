<!DOCTYPE html>
<html>
<head>
  <title>Book List – Bertie's Books</title>
  <link rel="stylesheet" href="/main.css">
</head>
<body>
<div class="container book-list">
  <h1>Bertie’s Books</h1>   
   <nav class="navbar">
      <div class="nav-left">
        <a href="/" class="nav-logo"><%= shopData.shopName %></a>
      </div>

      <ul class="nav-center">
        <li><a href="./list">All Books</a></li>
        <li><a href="./add">Add Book</a></li>
        <li><a href="./search">Search Books</a></li>
        <li><a href="../users/register">Register</a></li>
        <li><a href="../about">About</a></li>
      </ul>
      
      <div class="nav-right">
        <a href="../users/login" class="login-btn">Login</a>
      </div>

    </nav>

  <div class="section">
    <h2 style="margin-top:0">Book List <span class="badge">(<%= books.length %>)</span></h2>

    <table class="table">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price (£)</th>
        <th>Actions</th>
      </tr>

      <% books.forEach(b => { %>
        <tr>
          <td><%= b.id %></td>
          <td><%= b.name %></td>
          <td><%= b.price %></td>
          <td class="actions">
            <a href="./edit/<%= b.id %>" class="btn">Edit</a>
            <a href="./delete/<%= b.id %>" class="btn btn-danger" onclick="return confirm('Delete this book?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>

    <div style="margin-top:14px">
      <a href="./add" class="btn">+ Add Book</a>
      <a href="./search" class="btn">Search</a>
    </div>
  </div>
</div>
</body>
</html>
